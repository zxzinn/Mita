{
  "identifier": "main-capability",
  "description": "Main capability for the application",
  "local": true,
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "fs:default",
    "fs:allow-write-file",
    "fs:allow-read-file",
    "fs:allow-read-dir",
    "fs:allow-desktop-write",
    "fs:allow-desktop-read",
    "fs:allow-desktop-write-recursive",
    "fs:allow-desktop-read-recursive",
    "fs:allow-download-write",
    "fs:allow-download-read",
    "fs:allow-download-write-recursive",
    "fs:allow-download-read-recursive",
    "fs:allow-picture-write",
    "fs:allow-picture-read",
    "fs:allow-picture-write-recursive",
    "fs:allow-picture-read-recursive",
    "fs:scope",
    "http:default"
  ],
  "platforms": ["linux", "macOS", "windows"],
  "fs": {
    "scope": {
      "allow": [
        "$HOME/.nai-app-v3/images",
        "$USERPROFILE/.nai-app-v3/images"
      ]
    }
  }
}